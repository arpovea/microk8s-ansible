# Default launch configuration for MicroK8s.
---
version: 0.1.0
extraKubeletArgs:
  --cluster-domain: cluster.local
  --cluster-dns: {{ dns_ip }}
extraApiServerArgs:
  --service-cluster-ip-range={{ service_network_cidr }}
  --pod-network-cidr={{ pod_network_cidr }}
  {% if enable_extra_certs %}
  --apiserver-cert-extra-sans={{ load_balancer_ip }},{{ load_balancer_dns }}
  {% endif %}
addons:
- name: dns
{% if enable_kube_ovn %}
- name: kube-ovn
{% endif %}
