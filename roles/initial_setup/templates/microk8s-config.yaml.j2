# Default launch configuration for MicroK8s.
---
version: 0.1.0
addons:
  - name: dns
  - name: kube-ovn
    args: [--force]
---
version: 0.2.0
extraCNIEnv:
  IPv4_CLUSTER_CIDR: "{{ pod_network_cidr }}"
  IPv4_SERVICE_CIDR: "{{ service_network_cidr }}"
{% if enable_extra_certs %}
extraSANs:
  - {{ load_balancer_ip }}
  - {{ load_balancer_dns }}
{% endif %}